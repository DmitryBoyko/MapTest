@model MainPageModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-auto">
        <button id="btnTable" class="btn btn-sm btn-outline-light simple-btn-image simple-btn"></button>
    </div>
</div>

<div class="row">
    <div class="col-auto">
        <select class="form-control form-control-sm" id="selectMainFilter">
            @foreach (var item in Model.MainFilter.OrderBy(x=>x.Key))
            {
                <option value="@item.Key">@item.Value</option>
            }
        </select>
        <select class="form-control form-control-sm" id="selectYearFilter">
            @foreach (var item in Model.Years.OrderByDescending(x=>x))
            {
                <option value="@item">@item</option>
            }
        </select>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div id='map-container'></div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div id="tableContainer">
            @Html.AntiForgeryToken()
        </div>
    </div>
</div>

<div class="simple-popup-holder">
    <div id="popup" class="simple-popup alert p-1 d-none shadow" style="width:40%!important;">
        <div class="simple-popup-content">
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("~/Views/Shared/_ValidationScriptsPartial.cshtml");}
    <script src="~/lib/map/raphael.min.js"></script>
    <script src="~/lib/map/settings.js"></script>
    <script src="~/lib/map/paths.js"></script>
    <script src="~/lib/map/map.js"></script>
    <script src="~/js/page-home.js"></script>
}

@section head{
    <link href="~/lib/map/map.css" rel="stylesheet" />
    <style type="text/css">
    </style>
}